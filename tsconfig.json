{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "out",
    "rootDir": "src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "sourceMap": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".vscode-test"]
}
